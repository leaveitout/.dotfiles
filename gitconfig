[push]
  default = simple
[core]
  editor = vim 
[diff]
  tool = gvimdiff
[difftool]
  prompt = false
[include]
  path = ~/.gitconfig.local
[credential]
  helper = cache --timeout=3600

# Enforce SSH
[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
    insteadOf = https://gitlab.com/
[url "ssh://git@bitbucket.org/"]
    insteadOf = https://bitbucket.org/
